<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.pobla.baking"
          xmlns:android="http://schemas.android.com/apk/res/android">

  <uses-permission android:name="android.permission.INTERNET"/>

  <application
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:roundIcon="@mipmap/ic_launcher_round"
    android:supportsRtl="true"
    android:theme="@style/AppTheme">
    <activity android:name=".ui.main.MainActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>
        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>

    <service
      android:name=".data.BakingIntentService"
      android:exported="false"/>

    <provider
      android:name=".data.storage.schematic.RecipeProvider"
      android:authorities="@string/authority_provider"
      android:exported="false"/>

    <activity
      android:name=".ui.recipe.RecipeListActivity"
      android:label="@string/title_recipe_list"
      android:parentActivityName=".ui.main.MainActivity"
      android:theme="@style/AppTheme.NoActionBar">
      <meta-data
        android:name="android.support.PARENT_ACTIVITY"
        android:value=".ui.main.MainActivity"/>
    </activity>

    <activity
      android:name=".ui.recipe.RecipeDetailActivity"
      android:label="@string/title_recipe_detail"
      android:parentActivityName=".ui.recipe.RecipeListActivity"
      android:theme="@style/AppTheme.NoActionBar">
      <meta-data
        android:name="android.support.PARENT_ACTIVITY"
        android:value="com.pobla.baking.ui.recipe.RecipeListActivity"/>
    </activity>

  </application>

</manifest>