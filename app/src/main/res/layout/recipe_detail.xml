<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <android.support.constraint.Guideline
    android:id="@+id/guideline_detail_guideline_horizontal_half"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    app:layout_constraintGuide_percent="0.5"/>


  <com.google.android.exoplayer2.ui.SimpleExoPlayerView
    android:id="@+id/recipe_detail_video_player"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:background="@color/colorPrimaryDark"
    app:layout_constraintBottom_toTopOf="@id/guideline_detail_guideline_horizontal_half"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>


  <TextView
    android:id="@+id/recipe_detail_description"
    style="?android:attr/textAppearanceLarge"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:textIsSelectable="true"
    app:layout_constraintTop_toBottomOf="@id/recipe_detail_video_player"
    tools:context="com.pobla.baking.ui.recipe.view.StepDetailFragment"
    tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Cras tincidunt diam eget augue fringilla volutpat. Aliquam vel dolor ante. Donec dictum ligula in felis fermentum, nec tristique libero malesuada. Ut posuere viverra ligula non interdum. Suspendisse eget dapibus dui. Nunc eget turpis non turpis consectetur bibendum. Phasellus gravida imperdiet faucibus. Donec suscipit leo at orci tristique semper. Suspendisse potenti"
    />

  <android.support.design.widget.FloatingActionButton
    android:id="@+id/recipe_detail_button_next"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/material_component_floating_action_button_margin"
    android:src="@drawable/ic_arrow_forward_white_24dp"
    android:visibility="gone"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    />

  <android.support.design.widget.FloatingActionButton
    android:id="@+id/recipe_detail_button_back"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/material_component_floating_action_button_margin"
    android:src="@drawable/ic_arrow_back_white_24dp"
    android:visibility="gone"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    />

</android.support.constraint.ConstraintLayout>
