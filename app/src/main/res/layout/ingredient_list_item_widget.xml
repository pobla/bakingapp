<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/ll_widget_ingredient_container"
              android:orientation="horizontal">

  <TextView
    android:id="@+id/id_text"
    android:layout_width="50dp"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_margin="@dimen/material_component_lists_right_padding"
    android:textSize="@dimen/material_component_lists_single_line_text_size"
    tools:text="0"
    android:textAppearance="?attr/textAppearanceListItem"
    />


  <TextView
    android:id="@+id/content"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:text="Sample step"
    android:textSize="@dimen/material_component_lists_single_line_text_size"
    android:layout_margin="@dimen/material_component_lists_right_padding"
    android:textAppearance="?attr/textAppearanceListItem"
    />
</LinearLayout>